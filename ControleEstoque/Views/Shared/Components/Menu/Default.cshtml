@model UsuarioModel


<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>


<div class="dropdown">
    <button class="btn btn-secondary  d-flex align-items-center justify-content-center" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="width:5rem">
        <i class="bi bi-list" style="font-size: 1.7rem;"></i>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a></li>
        <li><a class="dropdown-item" asp-area="" asp-controller="Ont" asp-action="Index">ONTs</a></li>
        <li><a class="dropdown-item" asp-area="" asp-controller="W5" asp-action="Index">W5</a></li>
        <li><a class="dropdown-item" asp-area="" asp-controller="OnuIntelbras" asp-action="Index">Onu Intelbras</a></li>

        @* Função para mostrar os usuários somente para Admin *@
        @if (Model.Perfil == ControleEstoque.Enums.PerfilEnum.Admin)
        {
            <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a></li>
        }

        <li><a class="dropdown-item" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a></li>
        <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a></li>
    </ul>
</div>

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Olá, @Model.Nome</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
