   <table class="display" id="table-ont" style="width:100%;">
        <thead>
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Nome</th>
                <th scope="col" class="text-center">Mac</th>
                <th scope="col" class="text-center">Número de Série</th>
                <th scope="col" class="text-center">Data Cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (OntModel ont in Model)
                {
                    <tr>
                        <th scope="row">@ont.Id</th>
                        <td>@ont.Nome</td>
                        <td>@ont.Mac</td>
                        <td>@ont.NumeroSerie</td>
                        <td>@ont.DataCadastro</td>
                        <td>
                            <div class="btn-group gap-3" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@ont.Id" asp-controller="Ont" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@ont.Id" asp-controller="Ont" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
